<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/labelGiveMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hey 39M, I want"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/editAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:digits="0123456789"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="9"
        android:text=""
        android:textSize="40sp" />

    <TextView
        android:id="@+id/labelAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editAP"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/editAP"
        android:layout_toRightOf="@+id/editAP"
        android:text="AP"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/labelMultiCF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAP"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:text="MultiCF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countMultiCF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelMultiCF"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelCF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelMultiCF"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="CF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countCF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelCF"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelCF"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Capture"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelCapture"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelCapture"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Complete"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelComplete"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelComplete"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Link"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelLink"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelResMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelLink"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Res|Mod"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countResMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelResMod"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelHack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelResMod"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Hack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countHack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelHack"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelHack"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Upgrade"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelUpgrade"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelRecharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelUpgrade"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Recharge"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countRecharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labelRecharge"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="0"
        android:textSize="20sp" />

</RelativeLayout>
